<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.moviereviewweb.mapper.NoticeMapper">
    <insert id="insert" parameterType="com.example.entity.Notice">
          insert into notice(title,content,time) values (#{title},#{content},#{time})
    </insert>
    <update id="updateById"  parameterType="com.example.entity.Notice">
        update notice set title = #{title},content = #{content}, time =#{time}
        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from notice where id =#{id}
    </delete>
    <select id="selectAll" resultType="com.example.entity.Notice">
        select * from notice
        <where>
            <if test="title !=null">and title like contact('%',#{title},'%')</if>
        </where>
        order by id desc
    </select>
</mapper>